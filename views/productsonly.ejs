		<script>
			function searchProducts() {
				// Get the search input value
				var searchTerm = document.getElementById('search').value.toLowerCase();
				
				// Get all product elements
				var productElements = document.querySelectorAll('.product-men');
		
				// Loop through each product and check if it matches the search term
				productElements.forEach(function (product) {
					var productName = product.querySelector('.info-product-price h4 a').textContent.toLowerCase();
					if (productName.includes(searchTerm)) {
						product.style.display = 'block';
					} else {
						product.style.display = 'none';
					}
				});
			}
		</script>
		
		
