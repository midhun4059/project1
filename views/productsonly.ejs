<!-- Add this script to handle sorting -->
<script>
	function handleSortSubmit() {
			// Get the selected sort order
			const sortOrder = $('#sort').val();

			// Update the sorting message
			const sortMessage = sortOrder === 'asc' ? 'Low to High' : 'High to Low';
			$('#sortMessage').text(sortMessage);

			// Make an AJAX request to sort the products
			$.ajax({
					type: 'POST',
					url: '/sortproducts',
					data: { sort: sortOrder },
					success: function (data) {
							// Update the product list with the sorted data
							$('#productList').html(data);
					},
					error: function (error) {
							console.error('Error sorting products:', error);
					}
			});

			return false; // Prevent the default form submission
	}
</script>

