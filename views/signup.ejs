<body>
    <section class="main">
        <div class="bottom-grid">
            <div class ="logo">
                <h1><a href="index.html">Sign Up Form</a></h1>
            </div>
        </div>
        <div class="w3lhny-register">
            <div class="iconhny">
                <span class="fa fa-user-plus"></span>
            </div>
            <form action="/signup" method="post" class="register-form" onsubmit="return validateForm();">
                <fieldset>
                    <div class="form">
                        <div class="form-row">
                            <span class="fa fa-user"></span>
                            <p id="name-error" style="color: red;"></p>
                            <input type="text" class="form-text" placeholder="Name" id="name" name="username">
                        </div>
                        <div class="form-row">
                            <span class="fa fa-envelope"></span>
                            <p id="email-error" style="color: red;"></p>
                            <% if (typeof error !== 'undefined') { %>
                                <p class="error-message" style="color: red;"><%= error %></p>
                              <% } %>
                              
                            <input type="email" class="form-text" placeholder="Email Address" id="email" name="email">
                        </div>
                        <div class="form-row">
                            <span class="fa fa-lock"></span>
                            <p id="password-error" style="color: red;"></p>
                            <input type="password" class="form-text" placeholder="Password" id="password" name="password">
                        </div>
                        <div class="form-row">
                            <span class="fa fa-phone"></span>
                            <p id="phone-error" style="color: red;"></p>
                            <input type="tel" class="form-text" placeholder="Phone Number" pattern="[0-9]{10}" id="phone" name="phone">
                        </div>
                    </div>
                    <div class="form-row button-login">
                        <button class="btn btn-login" type="submit" id="submit">Sign Up</button>
                    </div>
                </fieldset>
            </form>
            
