<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>e_Shopee</title>
    <link rel="stylesheet" href="/css/otp.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <style>
        body {
            height: 100vh;
       
            
            display: flex;
            align-items: center;
            justify-content: center;
            background: url('/images/background images.png') ;
            background-size: cover;
        }

        .otp-container {
            max-width: 400px;
            width: 100%;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .otp-input {
            width: 100%;
            margin-top: 20px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }

        .error-message {
            color: red;
            margin-top: 10px;
        }

        .submit-btn {
            margin-top: 20px;
        }

        .resend-btn {
            margin-top: 10px;
        }
    </style>

</head>

<body>
    <form action="/otp" method="post" class="otp-container">
        <h6>Please enter the one-time password <br> to verify your account</h6>


        <div class="error-message">
            <% if (errorMessage) { %>
            <p><%= errorMessage %></p>
            <% } %>
        </div>

        <input type="text" id="otp" name="otp" class="otp-input">

        <div class="mt-4">
            <button class="btn btn-danger px-4 submit-btn" type="submit">Submit</button>
        </div>

        <div id="countdown">00:30</div>

        <div id="hiddenButton" style="display: none;" class="resend-btn">
            <form action="/otp/resend" method="get">
                <button id="showButton" class="btn btn-danger">RESEND</button>
            </form>
        </div>
    </form>

    <script>
        let seconds = 30;

        function countdown() {
            const countdownDisplay = document.getElementById('countdown');
            const interval = setInterval(function () {
                countdownDisplay.textContent = seconds;

                if (seconds === 0) {
                    clearInterval(interval);
                } else {
                    seconds--;
                }
            }, 1000);
        }

        countdown();
    </script>

    <script>
        
        function showButtonAfterOneMinute() {
            const hiddenButton = document.getElementById('hiddenButton');
            hiddenButton.style.display = 'block'; 
        }

       
        setTimeout(showButtonAfterOneMinute, 30000);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>
