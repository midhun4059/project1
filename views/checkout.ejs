  <script>
    function validateAddress() {
        // Check if address is selected
        const addressSelect = document.getElementById('addressSelect'); // Assuming there is a select box with this ID

        if (addressSelect && addressSelect.value === '') {
            // If no address is selected, show an alert message
            alert('Please select an address before placing the order.');
            event.preventDefault(); // Prevent the default action (order placement)
        }
    }
